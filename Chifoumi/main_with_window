import tkinter as tk
from random import choice


choix = ("ðŸª¨ Pierre", "ðŸ“„ Feuille", "âœ‚ï¸ Ciseaux") # DÃ©finir la pierre, la feuille, et les ciseaux


def jouer(choix_joueur):
    
    choix_ordinateur = choice(range(3)) # Choix alÃ©atoire de l'ordinateur

    
    label_choix_joueur.config(text=choix[choix_joueur])# Affichier les choix dans les labels
    label_choix_ordinateur.config(text=choix[choix_ordinateur])

    
    if choix_joueur == choix_ordinateur: # VÃ©rifier du rÃ©sultat du jeu
        label_resultat.config(text="ðŸ¤ Ã‰GALITÃ‰", fg="#4d4dff")
    elif (choix_joueur > choix_ordinateur and choix_ordinateur + 1 == choix_joueur) or (choix_joueur < choix_ordinateur and choix_joueur + choix_ordinateur == 2):
        label_resultat.config(text="ðŸŽ‰ VOUS GAGNEZ ðŸŽ‰", fg="#00e600")
    else:
        label_resultat.config(text="ðŸ’¥ VOUS PERDEZ ðŸ’¥", fg="#ff3333")

fenetre = tk.Tk() # CrÃ©e de la fenÃªtre principale
fenetre.title("ðŸŽ® Pierre - Feuille - Ciseaux ðŸŽ®") # Dire quel est le nom de la page

fenetre.config(bg="#222222") # Couleur de l'arriÃ¨re plan
fenetre.geometry("500x600") # Taille de la fenÃªtre
fenetre.resizable(False, False) # Ne pas pouvoir modifier la taille.


label_titre = tk.Label(fenetre, text="ðŸŽ® Pierre - Feuille - Ciseaux ðŸŽ®", font=("Helvetica", 24, 'bold'), fg="#00bfff", bg="#222222") # Titre du jeu, avec du style
label_titre.pack(pady=20)


label_choix_joueur = tk.Label(fenetre, text="", font=("Helvetica", 16), fg="#f1c40f", bg="#222222")  # Afficher les choix de l'utilisateur
label_choix_joueur.pack(pady=10)

label_choix_ordinateur = tk.Label(fenetre, text="", font=("Helvetica", 16), fg="#e74c3c", bg="#222222")
label_choix_ordinateur.pack(pady=10)


label_resultat = tk.Label(fenetre, text="", font=("Helvetica", 18), bg="#222222") # RÃ©sultat du jeu
label_resultat.pack(pady=20)

def choisir_pierre():
    jouer(0)

def choisir_feuille():
    jouer(1)

def choisir_ciseaux():
    jouer(2)

button_pierre = tk.Button(fenetre, text="ðŸª¨ Pierre", command=choisir_pierre, font=("Helvetica", 18), bg="#2980b9", fg="white", relief="flat", bd=0)
button_pierre.pack(side="left", padx=20, pady=20)

button_feuille = tk.Button(fenetre, text="ðŸ“„ Feuille", command=choisir_feuille, font=("Helvetica", 18), bg="#27ae60", fg="white", relief="flat", bd=0)
button_feuille.pack(side="left", padx=20, pady=20)

button_ciseaux = tk.Button(fenetre, text="âœ‚ï¸ Ciseaux", command=choisir_ciseaux, font=("Helvetica", 18), bg="#e74c3c", fg="white", relief="flat", bd=0)
button_ciseaux.pack(side="left", padx=20, pady=20)

def on_enter(event, button, color):
    button.config(bg=color)

def on_leave(event, button, original_color):
    button.config(bg=original_color)

button_pierre.bind("<Enter>", lambda e, button=button_pierre: on_enter(e, button, "#3498db"))
button_pierre.bind("<Leave>", lambda e, button=button_pierre: on_leave(e, button, "#2980b9"))

button_feuille.bind("<Enter>", lambda e, button=button_feuille: on_enter(e, button, "#2ecc71"))
button_feuille.bind("<Leave>", lambda e, button=button_feuille: on_leave(e, button, "#27ae60"))

button_ciseaux.bind("<Enter>", lambda e, button=button_ciseaux: on_enter(e, button, "#e67e22"))
button_ciseaux.bind("<Leave>", lambda e, button=button_ciseaux: on_leave(e, button, "#e74c3c"))

fenetre.mainloop()
